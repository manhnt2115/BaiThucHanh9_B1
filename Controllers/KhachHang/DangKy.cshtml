@model WebApplication1.Models.KHACHHANG
@{
    ViewBag.Title = "Đăng Ký Tài Khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Đăng Ký Tài Khoản Mới</h2>
<div class="container" style="max-width:500px;">
    @using (Html.BeginForm("DangKy", "KhachHang", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label>Họ tên</label>
            @Html.TextBoxFor(m => m.HoTen, new { @class = "form-control", required = "required" })
        </div>

        <div class="form-group">
            <label>Tài khoản</label>
            @Html.TextBoxFor(m => m.TaiKhoan, new { @class = "form-control", required = "required" })
        </div>

        <div class="form-group">
            <label>Mật khẩu</label>
            @Html.PasswordFor(m => m.MatKhau, new { @class = "form-control", required = "required" })
        </div>

        <div class="form-group">
            <label>Địa chỉ</label>
            @Html.TextBoxFor(m => m.DiaChi, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Điện thoại</label>
            @Html.TextBoxFor(m => m.DienThoai, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Email</label>
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>

        <button type="submit" class="btn btn-success btn-block">Đăng ký</button>

        <p class="text-danger mt-2">@ViewBag.ThongBao</p>
    }
</div>